# imap config
set folder=imaps://mail.domain.com
set spoolfile=+INBOX
set query_command = "~/bin/mutt-ldap.pl %s"
## gmail config
# set folder=imaps://imap.gmail.com:993
# set smtp_url = "smtp://user.name@smtp.gmail.com:587/"
# set spoolfile="+INBOX"
