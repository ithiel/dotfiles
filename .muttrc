# set trash = "imaps://imap.gmail.com/[Gmail]/Trash"
# set header_cache =~/.mutt/cache/headers
# set message_cachedir =~/.mutt/cache/bodies
# set certificate_file =~/.mutt/certificates

set imap_user=user.name@domain.com
set imap_keepalive=2

set from="<mail@domain>"
set use_from=yes
set use_envelope_from=yes
#set edit_headers=yes
set realname="My Name"
set include=yes
set mail_check=90
set timeout=15
set ascii_chars=yes
set fast_reply="yes"
set header_cache=/home/username/muttheaders
set sort_aux=date-received
set sort=threads
set sort=reverse-date-received
set strict_threads
set print_command="cat >> /home/username/muttout.txt"
unset ascii_chars
set signature="~/.signature"
set editor="vim"

#macro index M "T.*\n;WN" "Mark all messages as read"
macro index ",c" "<pipe-message>~/bin/mutt_add_reminder<enter>"

mbox-hook +INBOX /home/username/inbox.archive
save-hook .* /home/username/oldmail

color index white default  "~N !~T !~F !~p !~P"
color index brightblack black  "!~N !~T !~F !~p !~P"

# regular tagged messages
color index black         cyan    "~T !~F !~p !~P"
# regular flagged messages
color index black         red     "~F !~p !~P"
# messages to me
color index brightblack        black  "~p !~N !~T !~F !~P"
color index brightyellow  default   "~p ~N !~T !~F !~P"
color index white        cyan    "~p ~T !~F !~P"
color index white        red     "~p ~F !~P"
# messages from me
color index green         black "~P !~N !~T !~F"
color index green         default   "~P ~N !~T !~F"
color index green         cyan    "~P ~T !~F"
color index green         red     "~P ~F"
